package {	import flash.display.*;	import flash.text.*;	import flash.events.*;	import flash.net.URLLoader;	import flash.net.URLRequest;		public class swSong extends MovieClip { 		public var bandName:String;		public var songName:String;		public var bandStatus:String;		public var artistUser:String;		public var songPrice:String;		public var art:String;		public var songId:String;		public var artistId:String;		public var albumId:String;		public var active:Boolean;				public var start_y:Number;		public var AR_POS:Number;		public var show_height:Number;				public function swSong() {			this.bandName = "";			this.songName = "";						this.active = false;						this.bg.alpha = 0.10;						this.addEventListener(Event.ENTER_FRAME, refreshThis);			this.ext.album.addEventListener (MouseEvent.MOUSE_DOWN, albumClick);			this.ext.album.addEventListener (MouseEvent.MOUSE_OVER, albumOver);			this.ext.album.addEventListener (MouseEvent.MOUSE_OUT, albumOut);			this.btn.addEventListener (MouseEvent.MOUSE_DOWN, detectClick);			this.btn.addEventListener (MouseEvent.MOUSE_OVER, detectOver);			this.btn.addEventListener (MouseEvent.MOUSE_OUT, detectOut);						this.cartIcon.visible = false;		}				public function loadArt() {			var imgUrl: String						if (this.art != 'none') {				imgUrl = "http://sawceart.s3.amazonaws.com/" + this.artistId + "/" + this.albumId + "-50." + this.art;			} else {				imgUrl = "http://sawceart.s3.amazonaws.com/default-50.gif";			}						var urlRequest: URLRequest = new URLRequest(imgUrl);			var loader:Loader = new Loader();			loader.load(urlRequest);			this.ext.albumLoader.addChild(loader);					}				public function resizeThis(event:Event) {			trace("fuck: ");			trace(stage.width);		}		public function refreshThis(event:Event) {			if (swGlobal.vars.songIndex == this.AR_POS) {				this.active = true;				this.show_height = this.bg.height + 100;			} else {				this.active = false;				this.show_height = this.bg.height;			}						if (this.active) {				this.sub.htmlText = "<span class='subOn'>" + this.bandName + "</span>";				this.main.htmlText = "<span class='mainOn'>" + this.songName + "</span>";				this.ext.visible = true;								this.y = this.start_y;			} else {				this.sub.htmlText = "<span class='subOff'>" + this.bandName + "</span>";				this.main.htmlText = "<span class='mainOff'>" + this.songName + "</span>";				this.ext.visible = false;								if (swGlobal.vars.songIndex > this.AR_POS || swGlobal.vars.songIndex == -1) {					this.y = this.start_y;				} else {					this.y = this.start_y + 100;				}			}		}				public function albumClick(event:MouseEvent) {			swGlobal.funcs.openURL("http://delta.sawce.net/music/artist/" + this.artistUser);		}		public function albumOver(event:MouseEvent) {			this.ext.albumBg.alpha = 0.50;		}				public function albumOut(event:MouseEvent) {			this.ext.albumBg.alpha = 0.25;		}				public function detectClick(event:MouseEvent) {			swGlobal.base.setSong(this.AR_POS);		}		public function detectOver(event:MouseEvent) {			this.bg.alpha = 0.25;		}				public function detectOut(event:MouseEvent) {			this.bg.alpha = 0.10;		}	}}